<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicplayerproject.Folder">
    <TextView
        android:text="All Songs Here"
        android:id="@+id/tv_header"
        style="@style/textView_header_album"/>

    <EditText
        android:layout_below="@id/tv_header"
        android:id="@+id/editText_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ListView
        android:layout_below="@id/editText_search"
        android:id="@+id/listView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:id="@+id/linear_bottom"
        style="@style/linear_bottom">
        <Button
            android:id="@+id/btn_home"
            style="@style/button_home"/>
        <Button
            android:id="@+id/btn_search"
            style="@style/button_search"/>
        <Button
            android:id="@+id/btn_queue_music"
            style="@style/button_queue"/>
        <Button
            android:id="@+id/btn_folder"
            style="@style/button_folder"/>
        <Button
            android:id="@+id/btn_profile"
            style="@style/button_profile"/>
    </LinearLayout>
</RelativeLayout>
