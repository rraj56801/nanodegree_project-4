                    <ImageView
                        style="@style/imageView_style"
                        android:src="@drawable/chrisbrown"/>
                    <ImageView
                        style="@style/imageView_style"
                        android:src="@drawable/eminem"/>
                    <ImageView
                        style="@style/imageView_style"
                        android:src="@drawable/chainsmoker"/>
                    <ImageView
                        style="@style/imageView_style"
                        android:src="@drawable/ariana"/>
                    <ImageView
                        style="@style/imageView_style"
                        android:src="@drawable/weekened"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                style="@style/textView_heading"
                android:text="Albums(English)"/>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    style="@style/linearlayout_horizontal">
                    <ImageView
                        style="@style/imageView_style"
                        android:src="@drawable/tbtcountry"/>
                    <ImageView
                        style="@style/imageView_style"
                        android:src="@drawable/riseofindependent"/>
                    <ImageView
                        style="@style/imageView_style"
